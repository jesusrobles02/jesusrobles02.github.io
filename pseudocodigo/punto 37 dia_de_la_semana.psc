	Definir dia Como entero;
	
	Escribir " <<< CALENDARIO SEMANAL>>> ";
	
	Escribir " 1 ";
	Escribir " 2 ";
	Escribir " 3 ";
	Escribir " 4 ";
	Escribir " 5 ";
	Escribir " 6 ";
	Escribir " 7 ";
	
	Escribir " Seleccione uno de los 7 dias de la semana ";
